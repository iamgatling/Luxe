# Stripe Configuration (Required for payment processing)

# Client-side: Used by the Stripe.js library to load the checkout form.
# Usage: app/(store)/checkout/page.tsx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Server-side: Used to initialize the Stripe API client for session creation.
# Usage: lib/stripe.ts
STRIPE_SECRET_KEY="sk_test_..."

# Supabase Configuration (Required for database access)

# Public URL: Used for both client and server Supabase initialization.
# Usage: lib/supabase/client.ts, lib/supabase/server.ts
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"

# Public Anon Key: Used for client-side and server-side read/write access.
# Usage: lib/supabase/client.ts, lib/supabase/server.ts
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_public_anon_key"

# Service Role Key: Used for server-side admin actions.
# This key grants full access and MUST NOT be exposed client-side.
# Usage: lib/supabase/server.ts
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key"
